---
const histories = [
  { time: "1993.1.8", desc: "岐阜県に生まれる" },
  { time: "2011.4", desc: "横浜国立大経営学部経営システム科学科入学" },
  { time: "2015.3", desc: "横浜国立大経営学部経営システム科学科卒業" },
  { time: "2015.4", desc: "SIerに入社、プログラミングに出会う" },
  { time: "2019.8", desc: "フリーランスとして独立" },
];
---

<div
  class="wrapper relative before:bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 pl-5 w-full bg-white"
>
  {
    histories.map((his) => (
      <div class="flex items-center py-4 text-2xl">
        <div class="shrink-0 w-40 text-base">{his.time}</div>
        <div>{his.desc}</div>
      </div>
    ))
  }
</div>
<style>
  @keyframes build {
    from {
      height: 0;
    }
    to {
      height: 100%;
    }
  }
  .wrapper {
    width: 50vw;
    max-width: 100%;
  }
  .wrapper::before {
    position: absolute;
    left: 0;
    width: 4px;
    height: 0;
    content: "";
    will-change: transform;
    animation: build 1s forwards;
  }
</style>
